{
	"compileOnSave": false,
	"compilerOptions": {
		"esModuleInterop": true,
		"removeComments": false,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"declaration": true,
		"sourceMap": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
	},
	"include": [
		"src/**/*"
	]
}
