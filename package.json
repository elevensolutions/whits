{
	"name": "whits",
	"version": "1.0.0",
	"description": "HyperText TypeScript Templating System",
	"author": {
		"name": "ELEVEN",
		"url": "https://think11.com"
	},
	"license": "MPL-2.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/elevensolutions/whits.git"
	},
	"publishConfig": {
		"@elevensolutions:registry": "https://npm.pkg.github.com",
		"access": "public"
	},
	"scripts": {
		"build": "rm -rf dist/* && npx tsc && chmod +x dist/cli.js",
		"pretest": "cd tests && rm -rf dist/* && npx tsc",
		"test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage",
		"tags": "node generateTags.mjs",
		"docs": "npx typedoc --out docs src"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"html-element-attributes": "^3.2.0",
		"html-tag-names": "^2.1.0",
		"jest": "^29.7.0",
		"svg-element-attributes": "^2.1.0",
		"svg-tag-names": "^3.0.1",
		"typedoc": "^0.25.3",
		"typescript": "^5.2.2"
	},
	"files": [
		"dist",
		"*.d.ts"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"bin": "./dist/cli.js"
}
